
@model GreenHouse_Management.Models.Customer

@using (Html.BeginForm(actionName: "Update", controllerName: "Customers"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(c => c.CustomerId)
    <br />

    @Html.Label("Name", "Name:")
    <br />
    @Html.EditorFor(c => c.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Email", "Email:")
    <br />
    @Html.EditorFor(c => c.Email, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("PhoneNumber", "PhoneNumber:")
    <br />
    @Html.EditorFor(c => c.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.PhoneNumber, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Address", "Address:")
    <br />
    @Html.EditorFor(c => c.Address, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Address, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}