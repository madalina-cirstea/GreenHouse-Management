
@model GreenHouse_Management.Models.Product

@using (Html.BeginForm(actionName: "Update", controllerName: "Products"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(p => p.ProductId)
    <br />

    @Html.Label("Name", "Name:")
    <br />
    @Html.EditorFor(p => p.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Status", "Status:")
    <br />
    @Html.EditorFor(p => p.Status, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(p => p.Status, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("ProductKey", "Product key:")
    <br />
    @Html.EditorFor(p => p.ProductKey, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(p => p.ProductKey, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("CustomerId", "CustomerId:")
    <br />
    @Html.EditorFor(p => p.CustomerId, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(p => p.CustomerId, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}